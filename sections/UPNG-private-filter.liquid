{% if customer.b2b? %}
  <!-- Usuario B2B autorizado - no pasa nada y continua igual -->
{% else %}
  <!-- Usuario no autorizado - mostrar overlay -->
  <div class="upng-private-overlay">
    <div class="flex flex-col justify-center items-center h-full">
      <p> {{ 'custom.customer.not_allowed' | t }} </p>
      <a class="btn btn--secondary" href="{{ settings.signup_page.url }}">
        {{ 'custom.variant-table.request-access' | t }}
      </a>
    </div>
  </div>
{% endif %}

<style>
  .upng-private-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: white;
    z-index: 20;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .upng-private-text {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: #333;
  }

</style>

